<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amg.rubik.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/surface_background"
        >

        <ImageButton
            android:id="@+id/btn_more_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_more"
            android:background="@android:color/transparent"
            android:padding="5dp"
            />

        <ImageButton
            android:id="@+id/randomizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_rubik"
            android:padding="0dp"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/solveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_solved_cube"
            android:padding="0dp"
            android:background="@android:color/transparent"
            />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />

        <ToggleButton
            android:id="@+id/btn_rotate_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/unlock_faces"
            android:textOn="@string/lock_faces"
            android:textAllCaps="true"
            android:checked="true"
            />

        <ImageButton
            android:contentDescription="@string/undo"
            android:id="@+id/btn_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cube_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

</LinearLayout>
