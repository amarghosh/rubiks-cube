<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.amg.rubik.SettingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/settings_row_vertical_padding"
            android:paddingBottom="@dimen/settings_row_vertical_padding"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_subhead_material"
                android:layout_weight="1"
                android:text="@string/cube_size" />

            <com.amg.rubik.ui.NumberPicker
                android:id="@+id/cube_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:value="3"
                app:minValue="1"
                app:maxValue="15"
                />

        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/settings_row_vertical_padding"
            android:paddingBottom="@dimen/settings_row_vertical_padding"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scrambling_count_label"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/abc_text_size_subhead_material"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="@string/scrambling_count_details"
                    />

            </LinearLayout>

            <com.amg.rubik.ui.NumberPicker
                android:id="@+id/scrambling_count_picker"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:minValue="1"
                app:value="4"
                />

        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/settings_row_vertical_padding"
            android:paddingBottom="@dimen/settings_row_vertical_padding"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="@dimen/abc_text_size_subhead_material"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:text="@string/speed" />

            <Spinner
                android:id="@+id/speed_spinner"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/speed_values" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        >

        <Button
            android:id="@+id/btn_reset"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/reset_settings"
            />

        <Button
            android:id="@+id/btn_play"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/play"
            />

    </LinearLayout>

</RelativeLayout>
